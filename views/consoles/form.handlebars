<h1>New Console</h1>

<form action="/consoles/upsert" role="form" method="post">
    <input type="hidden" name="_csrf" value="{{_csrfToken}}">
    {{#if console}}
    <div>
        <h2>{{console.name}}</h2>
        <input type="hidden" name="id" value="{{console.id}}">
    </div>
    {{/if}}
    <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="name" {{#if console}}value="{{console.name}}" {{/if}}>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>